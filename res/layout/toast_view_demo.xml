    android:layout_height="match_parent"
    android:orientation="vertical" >
  <Button   
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="defaltView"
      android:text="默认样式"
      />
  <Button   
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="optionPosition"
      android:text="自定义位置"
      />
   <Button   
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="optionView"
      android:text="自定义样式"
      />
   
    <Button   
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="imageToast"
      android:text="带图片的样式"
      />

